<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.takuya.myctrlactivity.MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit" />
    <Button
        android:id="@+id/btnEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickEditText"
        android:text="Edit Text" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
    <Button
        android:id="@+id/btnListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List Item"
        android:onClick="onClickList"
        />



    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
    <Button
        android:id="@+id/btnGridItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="btnGridItem"
        android:onClick="onClickGrid"
        />

</LinearLayout>
